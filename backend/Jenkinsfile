pipeline {
	agent any

    tools {
		jdk 'jdk17'     // nom que tu as mis dans Jenkins pour JDK
        maven 'maven'   // nom que tu as mis dans Jenkins pour Maven
    }

    stages {
		stage('Build') {
			steps {
				bat 'mvn clean compile'
            }
        }
        stage('Test') {
			steps {
				bat 'mvn test'
            }
            post {
				always {
					junit '**/target/surefire-reports/*.xml'
                }
            }
        }
        stage('Package') {
			steps {
				bat 'mvn package'
            }
            post {
				success {
					archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
                }
            }
        }
    }
}
